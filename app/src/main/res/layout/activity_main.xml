<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="ro.softvision.androidsamples.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edit_text"
        android:hint="Data to send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Activity 2"/>

    <Button
        android:id="@+id/btn_start_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Activity 2 with data"/>

    <Button
        android:id="@+id/btn_start_data_both"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Activity 2 with data and return"/>

    <Button
        android:id="@+id/btn_start_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Activity 2 finishing current"/>

</LinearLayout>
